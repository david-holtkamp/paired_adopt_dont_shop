<div class="content">
  <h3>Update shelter:</h3>
  <%= form_tag("/shelters/#{@shelter.id}", method: :patch) do %>
    <%= label_tag :name %><br>
    <%= text_field_tag :name, @shelter.name %><br><br>
    <%= label_tag :address %><br>
    <%= text_field_tag :address, @shelter.address %><br><br>
    <%= label_tag :city %><br>
    <%= text_field_tag :city, @shelter.city %><br><br>
    <%= label_tag :state %><br>
    <%= text_field_tag :state, @shelter.state %><br><br>
    <%= label_tag :zip %><br>
    <%= text_field_tag :zip, @shelter.zip %><br><br>
    <%= submit_tag "Update Shelter" %>
  <% end %>
</div>
